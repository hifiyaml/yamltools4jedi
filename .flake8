[flake8]
max-line-length = 320
exclude =
    .ipynb_checkpoints,
    .git,
    .vscode,
    .env,
    venv,
    __pycache__,
    *.pyc,
    build,
    dist,
    *.egg-info,
    **/tests/*,  # Exclude all `tests` directories at any depth
    *.pyo,  # Python optimized files
    docs/*  # Exclude any docs folder
